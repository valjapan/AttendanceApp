<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <!--shadow Color-->
            <solid android:color="#50BBBBBB" />

            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="0dp"
        android:right="3dp"
        android:top="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>

